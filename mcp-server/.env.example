# Django Helpdesk MCP Server Configuration
# Copy this file to .env and update with your settings

# Base URL of your django-helpdesk instance
HELPDESK_BASE_URL=http://localhost:8080

# Authentication - use either token OR username/password

# Token Authentication (recommended)
# Get this from: python manage.py drf_create_token <username>
HELPDESK_API_TOKEN=

# Basic Authentication (alternative)
HELPDESK_USERNAME=
HELPDESK_PASSWORD=

# Debug mode (optional)
# MCP_DEBUG=1